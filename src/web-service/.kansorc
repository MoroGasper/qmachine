(function () {
    'use strict';

 // Pragmas

    /*jslint indent: 4, maxlen: 80, node: true */

 // Declarations

    var couch;

 // Definitions

    if (process.env.COUCHDB_URL !== undefined) {
        couch = process.env.COUCHDB_URL;
    } else if (process.env.CLOUDANT_URL !== undefined) {
        couch = process.env.CLOUDANT_URL;
    } else if (process.env.DATABASE_URL !== undefined) {
        couch = process.env.DATABASE_URL;
    } else {
        couch = 'http://localhost:5984';
    }

 // Out-of-scope definitions

    exports.env = {
        db: {
            db: couch + '/db',
            minify: true,
            overrides: {
                load: 'couchdb-apps/db'
            }
        },
        www: {
            db: couch + '/www',
            minify: true,
            overrides: {
                attachments: ['public_html'],
                load: 'couchdb-apps/www'
            }
        }
    };

 // That's all, folks!

    return;

}());

